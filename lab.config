#
# Lab environment settings specific to scalelab RDS testbed as of Mar 2025
#
export KUBECONFIG=/root/_radez_/standard-00001/kubeconfig

export REG_KNI_USER=root
# OCP bastion. Use "" since host's FQDN has "."
export REG_OCPHOST="e16-h12-b02-fc640.rdu2.scalelab.redhat.com"
# When running on the bastion, lab DNS's quirk requires us to use ip in stead of FQDN.
#export REG_OCPHOST="10.6.60.151"

export REG_DP=rds
export OCP_WORKER_0=e23-h24-b02-fc640.rdu2.scalelab.redhat.com
export OCP_WORKER_1=e23-h24-b03-fc640.rdu2.scalelab.redhat.com
export OCP_WORKER_2=e23-h24-b04-fc640.rdu2.scalelab.redhat.com
export BM_HOSTS="e16-h12-b01-fc640.rdu2.scalelab.redhat.com e16-h12-b02-fc640.rdu2.scalelab.redhat.com"

# We have: Cx-5 (ens2f0np0,ens2f1np1) and XXV710 (ens2f0,ens2f1)

# For SRIOV, on our RDS cloud since ens2f1np1 has already connected to ovs-port-phys0, we pick XXV710 for SRIOV 
export REG_SRIOV_NIC=ens2f0
export REG_SRIOV_MTU=9000
export REG_SRIOV_NIC_MODEL=X710     # all intel 710 derivatives use X710 as model within regulus

# For MACVLAN, on our RDS cloud since ens2f1np1 has already connected to ovs-port-phys0, we pick XXV710 for MACVLAN as well 
export REG_MACVLAN_NIC=ens2f0
export REG_MACVLAN_MTU=9000
# MACVLAN config does not care NIC_MODEL

# For TESTPMD, on our RDS cloud since ens2f1np1 has already connected to ovs-port-phys0, we pick XXV710 for TESTPMD
export REG_DPDK_NIC_1=ens2f0
export REG_DPDK_NIC_2=ens2f1
export REG_DPDK_NIC_MODEL=X710  # all intel 710 derivatives use X710 as model within regulus

# TREX, the remote sides. On this RDS lab cloud is has only the XXV710
export TREX_HOSTS=$BM_HOSTS
export TREX_SRIOV_INTERFACE_1=ens2f0
export TREX_SRIOV_INTERFACE_2=ens2f1
export TREX_DPDK_NIC_MODEL=X710
#export REM_DPDK_CONFIG=true     # we don't want to auto config TREX side just yet, until we have verified this testbed

