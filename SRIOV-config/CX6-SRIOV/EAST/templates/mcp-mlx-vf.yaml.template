---
apiVersion: machineconfiguration.openshift.io/v1
kind: MachineConfigPool
metadata:
  name: mcp-$VENDOR-vf 
spec:
  maxUnavailable: 100%
  machineConfigSelector:
    matchExpressions:
      - {key: machineconfiguration.openshift.io/role, operator: In, values: [worker,mcp-$VENDOR-vf]} 
  nodeSelector:
    matchLabels:
      node-role.kubernetes.io/$MCP: "" 
