#!/bin/bash

# Usage: this_cmd [TAG i.e flexran | uperf | iperf]

RUNS="$(/bin/ls -p | grep / | grep $1 )"

# "ls -p" shows dir entries ended with /

for run in $RUNS
do
    echo $run
    # remove ending /
    name=${run::-1}
    if [ -f  $name.tgz ]; then
        pwd
        echo $name.tgz exists. Skip
        read -p "Delete $name (y/n)? " ans
        if [  "$ans" == 'y' ]; then
            rm -fr $name
        fi
    fi

    tar --force-local -czvf $name.tgz $name
    if [ $? -eq 0 ]; then
        echo "success"
        rm -fr $run
        chmod -w $name.tgz
     else
        echo "failure"
        rm $run.tgz
     fi
done
